{
    "name": "fastly-test",
    "version": "1.0.0",
    "license": "MIT",
    "engines": {
        "node": "14.x"
    },
    "scripts": {
        "typecheck": "tsc --noEmit",
        "lint:ts": "eslint ./api/**/*.ts --cache",
        "lint:json": "prettier \"*.json\"",
        "lint:fix:ts": "yarn lint:ts --fix",
        "lint:fix:json": "yarn lint:json --write",
        "lint": "run-p -l -n -c --aggregate-output lint:*",
        "lint:fix": "run-p -l -n -c --aggregate-output lint:fix:*"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{ts,tsx}": [
            "yarn typecheck",
            "yarn lint:fix:ts",
            "git add"
        ],
        "*.{json}": [
            "yarn lint:fix:json",
            "git add"
        ]
    },
    "dependencies": {
        "fastify": "2.15.1"
    },
    "devDependencies": {
        "@now/node": "1.8.5",
        "@types/node": "12.20.11",
        "@typescript-eslint/eslint-plugin": "3.10.1",
        "@typescript-eslint/parser": "3.10.1",
        "eslint": "7.25.0",
        "eslint-config-prettier": "8.3.0",
        "eslint-plugin-prettier": "3.4.0",
        "husky": "4.2.5",
        "lint-staged": "10.5.4",
        "npm-run-all": "4.1.5",
        "prettier": "2.2.1",
        "ts-loader": "9.4.4",
        "typescript": "4.2.4",
        "webpack": "4.46.0",
        "webpack-cli": "4.6.0"
    }
}
